<Window x:Class="TaskManager.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="NewPasswordWindow" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Background="#FFE8EDFF">
            <TextBlock Text="Новый пароль" FontSize="27" HorizontalAlignment="Center" Margin="0 10 0 20" FontFamily="Century Gothic"></TextBlock>
            <TextBlock Text="Пароль" HorizontalAlignment="Left" Margin="10 0 0 0" FontFamily="Century Gothic" FontSize="15"></TextBlock>
            <PasswordBox Margin="10 0 10 30" FontFamily="Century Gothic" Height="20" FontSize="15" Name="PasswordTextBox"></PasswordBox>
            <Button Content="Сохранить" Background="#FFF1F1F1" Margin="10 0 10 0" FontSize="15" FontFamily="Century Gothic" Name="Save_Button" Height="25" Click="Save_Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
