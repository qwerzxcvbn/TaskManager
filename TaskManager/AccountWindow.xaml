<Window x:Class="TaskManager.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"     
        Title="Личный кабинет" Height="450" Width="600" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <StackPanel Background="#FFE8EDFF">
            <TextBlock Text="Личный кабинет" FontSize="33" HorizontalAlignment="Center" Margin="0 10 0 10" FontFamily="Century Gothic"></TextBlock>
            <TextBlock Text="ФИО" HorizontalAlignment="Left" Margin="10 0 0 0" FontFamily="Century Gothic" FontSize="15" ></TextBlock>
            <TextBox Margin="10 0 10 10" FontFamily="Century Gothic" Height="20" FontSize="15" Name="Name"></TextBox>
            <TextBlock Text="Почта" HorizontalAlignment="Left" Margin="10 0 0 0" FontFamily="Century Gothic" FontSize="15"></TextBlock>
            <TextBox Margin="10 0 10 10" FontFamily="Century Gothic" Height="20" FontSize="15" Name="Email"></TextBox>
            <TextBlock Text="Логин" HorizontalAlignment="Left" Margin="10 0 0 0" FontFamily="Century Gothic" FontSize="15"></TextBlock>
            <TextBox Margin="10 0 10 10" FontFamily="Century Gothic" Height="20" FontSize="15" Name="LoginText"></TextBox>
            <TextBlock Text="Пароль" HorizontalAlignment="Left" Margin="10 0 0 0" FontFamily="Century Gothic" FontSize="15"></TextBlock>
            <TextBox Margin="10 0 10 30" FontFamily="Century Gothic" Height="20" FontSize="15" Name="PasswordText"></TextBox>
            <Button Content="Изменить" Margin="10 0 10 30" FontSize="15" FontFamily="Century Gothic" Background="#FFF1F1F1" Width="300" Height="25" BorderBrush="#FF585858" Name="SaveAccountButton" Click="SaveAccountButton_Click"/>
            <Button Content="Назад" Margin="10 0 10 30" HorizontalAlignment="Left" FontSize="15" FontFamily="Century Gothic" Background="#FFF1F1F1" Width="100" Height="25" BorderBrush="#FF585858" Name="BackButton" Click="BackButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
