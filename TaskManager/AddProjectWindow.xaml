<Window x:Class="TaskManager.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Новый проект" Height="300" Width="400" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid>
        <StackPanel Background="#FFE8EDFF">
            <TextBlock Text="Новый проект" FontSize="30" HorizontalAlignment="Center" Margin="0 5 0 30" FontFamily="Century Gothic"></TextBlock>
            <TextBlock Text="Название" FontSize="15" FontFamily="Century Gothic" ></TextBlock>
            <TextBox FontSize="15" FontFamily="Century Gothic" Margin="0 0 0 20" Name="TitleTextBox"></TextBox>
            <TextBlock Text="Описание" FontSize="15" FontFamily="Century Gothic"></TextBlock>
            <TextBox FontSize="15" FontFamily="Century Gothic" Margin="0 0 0 20" Name="DescriptionTextBox"></TextBox>
            <Button Content="Добавить" FontSize="15" FontFamily="Century Gothic" Background="#FFF1F1F1" Width="250" Height="25" Name="AddProject" Click="AddProject_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
